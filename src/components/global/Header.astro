---
import { Image } from 'astro:assets';

import Logo from '../../images/logo.png';
---

<header class="bg-black">
    <nav
        class="flex items-center justify-between p-6 mx-auto max-w-7xl lg:px-8"
        aria-label="Global"
    >
        <div class="flex flex-1">
            <div class="hidden lg:flex lg:gap-x-12">
                <a href="/reviews" class="text-sm font-semibold leading-6 text-white">Reviews</a>
                <a href="/about" class="text-sm font-semibold leading-6 text-white">About</a>
            </div>
            <div class="flex lg:hidden">
                <button
                    type="button"
                    class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700"
                >
                    <span class="sr-only">Open main menu</span>
                    <svg
                        class="w-6 h-6"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        aria-hidden="true"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
                    </svg>
                </button>
            </div>
        </div>
        <a href="/" class="-m-1.5 p-1.5">
            <span class="sr-only">Your Company</span>
            <Image src={Logo} alt="A description of my image." width="128" height="128" />
        </a>
        <div class="flex justify-end flex-1 lg:gap-x-12">
            <a href="/submit-band" class="text-sm font-semibold leading-6 text-white"
                >Submit a Band</a
            >
            <a href="/database" class="text-sm font-semibold leading-6 text-white">Database</a>
        </div>
    </nav>
    <!-- Mobile menu, show/hide based on menu open state. -->
    <div class="lg:hidden" role="dialog" aria-modal="true">
        <!-- Background backdrop, show/hide based on slide-over state. -->
        <div class="fixed inset-0 z-10"></div>
        <div class="fixed inset-y-0 left-0 z-10 w-full px-6 py-6 overflow-y-auto bg-white">
            <div class="flex items-center justify-between">
                <div class="flex flex-1">
                    <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700">
                        <span class="sr-only">Close menu</span>
                        <svg
                            class="w-6 h-6"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            aria-hidden="true"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
                <a href="/" class="-m-1.5 p-1.5">
                    <span class="sr-only">Your Company</span>
                    <Image src={Logo} alt="A description of my image." />
                </a>
                <div class="flex justify-end flex-1">
                    <a href="#" class="text-sm font-semibold leading-6 text-white"
                        >Log in <span aria-hidden="true">&rarr;</span></a
                    >
                </div>
            </div>
            <div class="mt-6 space-y-2">
                <a
                    href="#"
                    class="block px-3 py-2 -mx-3 text-base font-semibold leading-7 text-white rounded-lg hover:bg-gray-50"
                    >Product</a
                >
                <a
                    href="#"
                    class="block px-3 py-2 -mx-3 text-base font-semibold leading-7 text-white rounded-lg hover:bg-gray-50"
                    >Features</a
                >
                <a
                    href="#"
                    class="block px-3 py-2 -mx-3 text-base font-semibold leading-7 text-white rounded-lg hover:bg-gray-50"
                    >Company</a
                >
            </div>
        </div>
    </div>
</header>
