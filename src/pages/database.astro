// Import your layout and any other necessary components
import Layout from '../layouts/Layout.astro';

// Environment variables and other imports
const secretKey = import.meta.env.SECRET_AIRTABLE_API;

async function fetchData() {
    try {
        const res = await fetch('https://api.airtable.com/v0/appl0NcxRKRXivGEc/Bands', {
            headers: {
                Authorization: `Bearer ${secretKey}`,
            },
        });
        if (!res.ok) {
            throw new Error('Network response was not ok');
        }
        return await res.json();
    } catch (error) {
        console.error('Fetch error:', error);
        // Handle the error accordingly
        return null;
    }
}

const data = await fetchData();
const albums = data.records;

console.log(albums);
